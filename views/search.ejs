<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Huat Ah v2</title>
    <link rel="stylesheet" href="style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
      integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="shortcut icon" href="./img/favicon.png" type="image/x-icon" />
    <script src="script.js" defer></script>
  </head>
  <body>
    <header>
      <a href="/"><img src="./img/logo_red.png" alt="huatah logo" /></a>
      <form action="/search" method="POST">
        <input
          autocomplete="off"
          type="search"
          name="firstName"
          value=""
          required
        />
        <button type="submit"><i class="fa fa-search"></i></button>
      </form>
    </header>
    <main>
      <div class="search-content">
        <div class="search-balance">
          <h1>Summary</h1>
          <div class="balance-summary">
            <h3>
              Balance: <% if(results[0][0].balance === null) { %>
              <span>0.00</span>
              <% } else { %>
              <span> <%= results[0][0].balance.toFixed(2) %></span>
              <% } %>
            </h3>
          </div>
          <h1>Last few bets</h1>
          <% results[2].forEach((result) => { %>
          <div class="past-bet">
            <h2><%= result.Match_Name %></h2>
            <div class="past-bets-details">
              <h3>Bet on: <span><%= result.Bet_Name %></span></h3>
              <h3>Amount: <span><%= result.Amount %></span></h3>
              <h3>Odds: <span><%= result.Odds %></span></h3>
            </div>
            <div class="result">
              <h3>Result: <span><%= result.Balance %></span></h3>
            </div>
          </div>
          <% }) %>
        </div>
        <div class="search-active-bets">
          <h1>Active Bets</h1>
          <% results[1].forEach((result) => { %>
          <div class="active-bets">
            <h2><%= result.Match_Name %></h2>
            <div class="active-bets-details">
              <h3>Betting on: <span><%= result.Bet_Name %></span></h3>
              <h3>Amount: <span><%= result.Amount %></span></h3>
              <h3>Odds: <span><%= result.Odds %></span></h3>
            </div>
            <div class="potential">
              <h3>
                Potential Winnings:
                <span
                  ><%= (result.Amount * (result.Odds - 1)).toFixed(2) %></span
                >
              </h3>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </main>
  </body>
</html>
